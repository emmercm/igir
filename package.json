{
  "name": "igir",
  "version": "0.0.0",
  "description": "A ROM collection manager designed to make one game, one rom (1G1R) sets.",
  "keywords": [],
  "homepage": "https://github.com/emmercm/igir#readme",
  "bugs": {
    "url": "https://github.com/emmercm/igir/issues"
  },
  "license": "GPL-3.0-or-later",
  "author": "Christian Emmer",
  "type": "module",
  "files": [
    "build",
    "!**/test/**",
    "!**/*.test.*"
  ],
  "main": "build/index.js",
  "bin": {
    "igir": "build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmercm/igir.git"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "node": "node --loader ts-node/esm index.ts",
    "prepack": "npm run build",
    "prepare": "husky install",
    "release": "./node_modules/.bin/release-it --no-increment",
    "start": "ts-node index.ts",
    "test": "npm run test:unit && npm run lint",
    "test:unit": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --verbose",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --verbose --coverage"
  },
  "dependencies": {
    "7zip-min": "^1.4.3",
    "adm-zip": "^0.5.9",
    "async": "^3.2.4",
    "async-mutex": "^0.3.2",
    "chalk": "^5.0.1",
    "class-transformer": "^0.5.1",
    "cli-progress": "^3.11.2",
    "crc": "^4.1.1",
    "fast-glob": "^3.2.11",
    "figlet": "^1.5.2",
    "junk": "^4.0.0",
    "micromatch": "^4.0.5",
    "moment": "^2.29.4",
    "reflect-metadata": "^0.1.13",
    "trash": "^8.1.0",
    "xml2js": "^0.4.23",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/7zip-min": "^1.3.1",
    "@types/adm-zip": "^0.5.0",
    "@types/async": "^3.2.15",
    "@types/cli-progress": "^3.11.0",
    "@types/figlet": "^1.5.4",
    "@types/jest": "^28.1.6",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^18.0.3",
    "@types/xml2js": "^0.4.11",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "release-it": "^15.3.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "//engines": [
    "ES6 modules generally require ^12.20.0 || ^14.13.1 || >=16.0.0, though `tsc` can target ES5 or lower",
    "But a lot of dependencies use node: prefixed imports such as node:fs which `tsc` can't get around"
  ],
  "engines": {
    "node": ">=12.20.0"
  }
}
