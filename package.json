{
  "name": "igir",
  "version": "0.4.0",
  "description": "A ROM collection manager designed to make one game, one rom (1G1R) sets.",
  "keywords": [
    "1g1r",
    "analogue",
    "anbernic",
    "emulation",
    "logiqx",
    "mister",
    "no-intro",
    "redump",
    "roms",
    "tosec"
  ],
  "homepage": "https://github.com/emmercm/igir#readme",
  "bugs": {
    "url": "https://github.com/emmercm/igir/issues"
  },
  "license": "GPL-3.0-or-later",
  "author": "Christian Emmer",
  "type": "module",
  "files": [
    "build",
    "!**/test/**",
    "!**/*.test.*"
  ],
  "main": "build/index.js",
  "bin": {
    "igir": "build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmercm/igir.git"
  },
  "scripts": {
    "prepare": "husky install",
    "cache:clear": "npm cache clean --force && node --experimental-vm-modules ./node_modules/jest/bin/jest.js --clearCache",
    "start": "ts-node index.ts",
    "build": "tsc && chmod +x build/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:unit && npm run lint",
    "test:unit": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --verbose",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --verbose --coverage",
    "test:handles": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --verbose",
    "bump:minor": "./node_modules/.bin/release-it minor --no-git --no-github && npm run update:readme",
    "bump:patch": "./node_modules/.bin/release-it patch --no-git --no-github && npm run update:readme",
    "update:readme": "./scripts/update-readme-help.sh",
    "release": "./node_modules/.bin/release-it --no-increment",
    "prepack": "npm run build && npm run update:readme -- 72",
    "postpack": "npm run update:readme"
  },
  "dependencies": {
    "@fast-csv/format": "4.3.5",
    "@types/tar": "6.1.3",
    "7zip-min": "1.4.3",
    "async": "3.2.4",
    "async-mutex": "0.4.0",
    "chalk": "5.1.2",
    "class-transformer": "0.5.1",
    "cli-progress": "3.11.2",
    "crc": "4.1.1",
    "fast-glob": "3.2.12",
    "figlet": "1.5.2",
    "junk": "4.0.0",
    "micromatch": "4.0.5",
    "moment": "2.29.4",
    "node-unrar-js": "2.0.0",
    "reflect-metadata": "0.1.13",
    "semver": "7.3.8",
    "simple-statistics": "7.7.6",
    "tar": "6.1.11",
    "term-size": "3.0.2",
    "trash": "8.1.0",
    "xml2js": "0.4.23",
    "yargs": "17.6.0",
    "yauzl": "2.10.0",
    "yazl": "2.5.1"
  },
  "devDependencies": {
    "@jest/globals": "29.2.2",
    "@types/7zip-min": "1.3.1",
    "@types/async": "3.2.15",
    "@types/cli-progress": "3.11.0",
    "@types/figlet": "1.5.5",
    "@types/jest": "29.2.0",
    "@types/micromatch": "4.0.2",
    "@types/node": "18.11.5",
    "@types/semver": "7.3.12",
    "@types/xml2js": "0.4.11",
    "@types/yargs": "17.0.13",
    "@types/yauzl": "2.10.0",
    "@types/yazl": "2.4.2",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "auto-changelog": "2.4.0",
    "eslint": "8.26.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-jest": "27.1.3",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "husky": "8.0.1",
    "jest": "29.2.2",
    "release-it": "15.5.0",
    "strip-ansi": "7.0.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "//engines": [
    "ES6 modules generally require ^12.20.0 || ^14.13.1 || >=16.0.0, though `tsc` can target ES5 or lower",
    "But a lot of dependencies use node: prefixed imports such as node:fs which `tsc` can't get around"
  ],
  "engines": {
    "node": ">=14.18.0"
  }
}
