{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:base"
  ],
  timezone: "America/Los_Angeles",

  assignees: ["@emmercm"],
  reviewers: ["@emmercm"],
  assignAutomerge: false, // default

  // Reduce PR spam
  automergeSchedule: "before 5am on monday",
  prHourlyLimit: 0,

  separateMultipleMajor: true,
  separateMajorMinor: true, // default
  separateMinorPatch: false, // default

  automerge: true,

  npm: {
    lockFileMaintenance: {
      enabled: true
    },
    transitiveRemediation: true,

    stabilityDays: 3,

    packageRules: [
      {
        matchDepTypes: ["dependencies"],
        groupName: "Dependencies",
        automerge: false // TODO(cemmer)
      },
      {
        matchDepTypes: ["devDependencies"],
        groupName: "Dev Dependencies",
        rangeStrategy: "pin"
      },
      {
        matchDepTypes: ["optionalDependencies", "peerDependencies", "engines", "volta"],
        enabled: false
      }
    ]
  },
}
