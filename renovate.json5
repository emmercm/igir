{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:base"
  ],

  assignees: ["@emmercm"],
  reviewers: ["@emmercm"],

  separateMultipleMajor: true,
  separateMajorMinor: true, // default
  separateMinorPatch: false, // default

  // npm package.json
  node: {
    "lockFileMaintenance": { // :maintainLockFilesWeekly
      "enabled": true,
      "extends": ["schedule:weekly"]
    },
    transitiveRemediation: true,

    // npm:unpublishSafe
    stabilityDays: 3,

    packageRules: [
      {
        matchDepTypes: ["dependencies"],
        groupName: "Dependencies"
      },
      {
        matchDepTypes: ["devDependencies"],
        groupName: "Dev Dependencies",
        rangeStrategy: "pin", // :pinDevDependencies
        automerge: true
      },
      {
        matchDepTypes: ["optionalDependencies", "peerDependencies", "engines", "volta"],
        enabled: false
      }
    ]
  }
}
